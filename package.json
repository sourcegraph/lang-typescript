{
  "$schema": "https://raw.githubusercontent.com/sourcegraph/sourcegraph/master/shared/src/schema/extension.schema.json",
  "name": "typescript",
  "description": "TypeScript/JavaScript code intelligence",
  "private": true,
  "publisher": "sourcegraph",
  "engines": {
    "node": ">=11.1.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sourcegraph/sourcegraph-typescript"
  },
  "categories": [
    "Programming languages"
  ],
  "tags": [
    "typescript",
    "javascript",
    "react",
    "jsx",
    "cross-repository",
    "language-server"
  ],
  "activationEvents": [
    "onLanguage:typescript",
    "onLanguage:javascript"
  ],
  "contributes": {
    "actions": [
      {
        "id": "typescript.toggle",
        "command": "typescript.toggle",
        "title": "${config.typescript.enable && \"Disable\" || \"Enable\"} TypeScript code intelligence",
        "category": "TypeScript",
        "actionItem": {
          "description": "${config.typescript.enable && \"Disable\" || \"Enable\"} TypeScript code intelligence",
          "iconURL": "https://raw.githubusercontent.com/remojansen/logo.ts/5b4f0df433a5301aee0180582a8782bfbc9a0739/ts.svg?sanitize=true",
          "pressed": "config.typescript.enable"
        }
      },
      {
        "id": "impreciseResults",
        "title": "References: Search mode",
        "command": "open",
        "commandArguments": [
          "https://sourcegraph.com/extensions/sourcegraph/typescript"
        ],
        "actionItem": {
          "label": "References: Search mode",
          "description": "Results come from text search and heuristics. To use a language server for precise results, click to go to the README and follow the deployment instructions."
        }
      },
      {
        "id": "feedback",
        "command": "open",
        "title": "Submit code intel feedback",
        "commandArguments": [
          "${get(context, `codeIntel.feedbackLink`)}"
        ],
        "actionItem": {
          "description": "Submit code intel feedback",
          "iconURL": "data:image/svg+xml;base64,"
        }
      }
    ],
    "menus": {
      "editor/title": [
        {
          "action": "typescript.toggle"
        },
        {
          "action": "feedback",
          "when": "showFeedback"
        }
      ],
      "commandPalette": [],
      "panel/toolbar": [
        {
          "action": "impreciseResults",
          "when": "isImprecise && panel.activeView.hasLocations"
        }
      ]
    },
    "configuration": {
      "title": "LangTypescriptConfiguration",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "lightstep.token": {
          "description": "The LightStep project token to use for tracing.",
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        },
        "typescript.sourcegraphUrl": {
          "description": "The Sourcegraph endpoint the TypeScript server should use",
          "type": "string",
          "format": "url"
        },
        "typescript.enable": {
          "description": "Whether to enable TypeScript code intelligence. (Default: true)",
          "type": "boolean"
        },
        "typescript.progress": {
          "description": "Whether to report progress while fetching sources, installing dependencies etc. (Default: true)",
          "type": "boolean"
        },
        "typescript.diagnostics.enable": {
          "description": "Whether to show compile errors on lines (Default: false)",
          "type": "boolean"
        },
        "typescript.npmrc": {
          "description": "Settings to be written into an npmrc in key/value format. Can be used to specify custom registries and tokens.",
          "type": "object"
        },
        "typescript.restartAfterDependencyInstallation": {
          "description": "Whether to restart the language server after dependencies were installed (default true)",
          "type": "boolean"
        },
        "typescript.serverUrl": {
          "description": "The WebSocket language server to connect to",
          "type": "string",
          "format": "url"
        },
        "typescript.accessToken": {
          "description": "The access token for the language server to use to fetch files from the Sourcegraph API. The extension will create this token and save it in your settings automatically.",
          "type": "string"
        },
        "typescript.langserver.log": {
          "description": "The log level to pass to the TypeScript language server. Logs will be forwarded to the browser console with the prefix [langserver].",
          "enum": [
            false,
            "log",
            "info",
            "warn",
            "error"
          ]
        },
        "typescript.tsserver.log": {
          "description": "The log level to pass to tsserver. Logs will be forwarded to the browser console with the prefix [tsserver].",
          "enum": [
            false,
            "terse",
            "normal",
            "requestTime",
            "verbose"
          ]
        }
      }
    }
  },
  "license": "MIT",
  "main": "dist/extension.js",
  "browserslist": [
    "last 1 Chrome versions",
    "last 1 Firefox versions",
    "last 1 Edge versions",
    "last 1 Safari versions"
  ],
  "scripts": {
    "prettier": "prettier --list-different --write \"**/{*.{js?(on),ts,md,yml},.*.yml}\"",
    "prettier-check": "npm run prettier -- --write=false",
    "config-types": "dot-json package.json contributes.configuration | json2ts --unreachableDefinitions --style.singleQuote --no-style.semi",
    "config-types-ext": "npm run config-types -- -o extension/src/config.ts",
    "config-types-server": "npm run config-types -- -o server/src/config.ts",
    "tslint": "tslint -p extension/tsconfig.json --format stylish && tslint -p server/tsconfig.json --format stylish",
    "build": "npm run build-ext && npm run build-server",
    "build-server": "npm run config-types-server && tsc -p ./server/tsconfig.json",
    "watch-server": "npm run config-types-server && tsc -w -p ./server/tsconfig.json",
    "build-ext": "npm run config-types-ext && parcel build --out-file extension.js extension/src/extension.ts && dot-json dist/extension.map sourceRoot https://sourcegraph.com/github.com/sourcegraph/sourcegraph-typescript@$(git rev-parse HEAD)/-/raw/extension/src/",
    "serve-ext": "npm run symlink-package && npm run config-types-ext && parcel serve --no-hmr --out-file dist/extension.js extension/src/extension.ts",
    "typecheck-ext": "npm run config-types-ext && tsc -p ./extension/tsconfig.json",
    "symlink-package": "mkdirp dist && lnfs ./package.json ./dist/package.json",
    "sourcegraph:prepublish": "npm run build-ext"
  },
  "devDependencies": {
    "@sourcegraph/prettierrc": "^2.2.0",
    "@sourcegraph/tsconfig": "^4.0.0",
    "@sourcegraph/tslint-config": "^13.3.0",
    "@types/express": "4.16.1",
    "@types/got": "9.6.0",
    "@types/highlight.js": "9.12.3",
    "@types/ini": "1.3.30",
    "@types/json5": "0.0.30",
    "@types/lodash": "4.14.134",
    "@types/mkdirp-promise": "5.0.0",
    "@types/mz": "0.0.32",
    "@types/node": "10.12.18",
    "@types/pretty-bytes": "5.1.0",
    "@types/relateurl": "0.2.28",
    "@types/rmfr": "2.0.0",
    "@types/semver": "5.5.0",
    "@types/tail": "1.2.1",
    "@types/tar": "4.0.0",
    "@types/type-is": "1.6.2",
    "@types/uuid": "3.4.4",
    "@types/whatwg-url": "6.4.0",
    "@types/ws": "6.0.1",
    "dot-json": "^1.1.0",
    "husky": "^1.1.2",
    "json-schema-to-typescript": "^6.1.3",
    "lnfs-cli": "^2.1.0",
    "parcel-bundler": "^1.12.3",
    "prettier": "^1.17.1",
    "tslint": "^5.17.0",
    "yarn-deduplicate": "^1.1.1"
  },
  "dependencies": {
    "@sourcegraph/basic-code-intel": "^6.0.17",
    "@sourcegraph/lightstep-tracer-webworker": "^0.20.14-fork.3",
    "@sourcegraph/typescript-language-server": "^0.3.7-fork",
    "@sourcegraph/vscode-ws-jsonrpc": "0.0.3-fork",
    "abort-controller": "^2.0.3",
    "axios": "^0.19.0",
    "delay": "^4.1.0",
    "express": "^4.16.4",
    "fast-glob": "^2.2.6",
    "got": "^9.6.0",
    "highlight.js": "^9.13.1",
    "ini": "^1.3.5",
    "ix": "^2.3.5",
    "json5": "^2.1.0",
    "lightstep-tracer": "^0.20.13",
    "lodash": "^4.17.11",
    "mkdirp-promise": "^5.0.1",
    "mz": "^2.7.0",
    "npm-registry-fetch": "^3.8.0",
    "opentracing": "^0.14.3",
    "pretty-bytes": "^5.1.0",
    "prom-client": "^11.2.0",
    "relateurl": "^0.2.7",
    "rmfr": "^2.0.0",
    "rxjs": "^6.4.0",
    "semver": "^5.6.0",
    "source-map": "^0.7.3",
    "source-map-support": "^0.5.9",
    "sourcegraph": "^23.0.0",
    "tagged-template-noop": "^2.1.0",
    "tail": "^2.0.2",
    "tar": "^4.4.8",
    "type-is": "^1.6.16",
    "type-zoo": "^3.2.1",
    "typescript": "^3.4.1",
    "uuid": "^3.3.2",
    "vscode-languageserver-protocol": "^3.13.0",
    "vscode-languageserver-types": "^3.13.0",
    "whatwg-url": "^7.0.0",
    "ws": "^6.2.1",
    "yarn": "^1.12.3"
  }
}
