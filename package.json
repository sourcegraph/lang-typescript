{
  "name": "lang-typescript",
  "title": "WIP: Code intelligence for TypeScript",
  "description": "Provides code intelligence for TypeScript",
  "private": true,
  "publisher": "felixfbecker",
  "engines": {
    "node": ">=11.1.0"
  },
  "activationEvents": [
    "onLanguage:typescript",
    "onLanguage:javascript"
  ],
  "contributes": {
    "actions": [],
    "menus": {
      "editor/title": [],
      "commandPalette": []
    },
    "configuration": {
      "properties": {
        "typescript.serverUrl": {
          "description": "The WebSocket language server to connect to",
          "type": "string",
          "format": "url"
        },
        "typescript.accessToken": {
          "description": "The access token for the language server to use to fetch files from the Sourcegraph API. The extension will create this token and save it in your settings automatically.",
          "type": "string"
        },
        "typescript.langserver.log": {
          "description": "The log level to pass to the TypeScript language server. Logs will be forwarded to the browser console with the prefix [langserver].",
          "enum": [false, "log", "info", "warn", "error"]
        },
        "typescript.tsserver.log": {
          "description": "The log level to pass to tsserver. Logs will be forwarded to the browser console with the prefix [tsserver].",
          "enum": [false, "terse", "normal", "requestTime", "verbose"]
        }
      }
    }
  },
  "license": "MIT",
  "main": "dist/extension.js",
  "browserslist": [
    "last 1 Chrome versions",
    "last 1 Firefox versions",
    "last 1 Edge versions",
    "last 1 Safari versions"
  ],
  "scripts": {
    "prettier": "prettier --list-different --write \"**/{*.{js?(on),ts,md,yml},.*.yml}\"",
    "tslint": "tslint -p extension/tsconfig.json && tslint -p server/tsconfig.json",
    "build": "npm run build-ext && npm run build-server",
    "build-server": "tsc -p ./server/tsconfig.json",
    "build-ext": "parcel build --out-file extension.js extension/src/extension.ts",
    "serve-ext": "parcel serve --no-hmr --out-file dist/extension.js extension/src/extension.ts",
    "typecheck-ext": "tsc -p ./extension/tsconfig.json",
    "sourcegraph:prepublish": "npm run build-ext"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.1.2",
    "@sourcegraph/prettierrc": "^2.2.0",
    "@sourcegraph/tsconfig": "^3.0.0",
    "@sourcegraph/tslint-config": "^12.1.0",
    "@types/decompress": "4.2.3",
    "@types/globby": "8.0.0",
    "@types/json5": "0.0.30",
    "@types/lodash": "4.14.118",
    "@types/mkdirp-promise": "5.0.0",
    "@types/mz": "0.0.32",
    "@types/node": "10.12.6",
    "@types/package-json": "4.0.1",
    "@types/relateurl": "0.2.28",
    "@types/request": "2.48.1",
    "@types/rmfr": "2.0.0",
    "@types/tail": "1.2.0",
    "@types/uuid": "3.4.4",
    "@types/whatwg-url": "6.4.0",
    "@types/ws": "6.0.1",
    "husky": "^1.1.2",
    "parcel-bundler": "^1.10.3",
    "prettier": "^1.14.3",
    "semantic-release": "^15.10.6",
    "tslint": "^5.11.0",
    "typescript": "^3.2.0-dev.20181113"
  },
  "dependencies": {
    "@sourcegraph/vscode-ws-jsonrpc": "0.0.3-fork",
    "abort-controller": "^1.0.2",
    "decompress": "^4.2.0",
    "globby": "^8.0.1",
    "json5": "^2.1.0",
    "lightstep-tracer": "^0.20.13",
    "lodash": "^4.17.11",
    "mkdirp-promise": "^5.0.1",
    "mz": "^2.7.0",
    "opentracing": "^0.14.3",
    "package-json": "^5.0.0",
    "prom-client": "^11.2.0",
    "relateurl": "^0.2.7",
    "request": "^2.88.0",
    "rmfr": "^2.0.0",
    "rxjs": "^6.3.3",
    "source-map-support": "^0.5.9",
    "sourcegraph": "^19.0.3",
    "tagged-template-noop": "^2.1.0",
    "tail": "^2.0.1",
    "typescript-language-server": "^0.3.6",
    "uuid": "^3.3.2",
    "vscode-languageserver-protocol": "^3.13.0",
    "vscode-languageserver-types": "^3.13.0",
    "whatwg-url": "^7.0.0",
    "ws": "^6.1.0",
    "yarn": "^1.12.1"
  }
}
