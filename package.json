{
  "name": "lang-typescript",
  "title": "Code intelligence for TypeScript",
  "description": "Provides code intelligence for TypeScript",
  "private": true,
  "publisher": "felixfbecker",
  "activationEvents": [
    "*"
  ],
  "contributes": {
    "actions": [],
    "menus": {
      "editor/title": [],
      "commandPalette": []
    },
    "configuration": {
      "properties": {
        "typescript.serverUrl": {
          "description": "The WebSocket language server to connect to",
          "type": "string",
          "format": "url"
        },
        "typescript.accessToken": {
          "description": "The access token for the language server to use to fetch files from the Sourcegraph API. The extension will create this token and save it in your settings automatically.",
          "type": "string"
        }
      }
    }
  },
  "license": "MIT",
  "main": "dist/extension.js",
  "browserslist": [
    "last 1 Chrome versions",
    "last 1 Firefox versions",
    "last 1 Edge versions",
    "last 1 Safari versions"
  ],
  "scripts": {
    "tslint": "tslint -p extension/tsconfig.json && tslint -p server/tsconfig.json",
    "build": "npm run build-ext && npm run build-server",
    "build-server": "tsc -p ./server/tsconfig.json",
    "build-ext": "parcel build --experimental-scope-hoisting --out-file extension.js extension/src/extension.ts",
    "serve-ext": "parcel serve --no-hmr --out-file dist/extension.js extension/src/extension.ts",
    "start-server": "node server/dist/server.js",
    "typecheck-ext": "tsc -p ./extension/tsconfig.json",
    "sourcegraph:prepublish": "npm run build-ext"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.1.2",
    "@sourcegraph/prettierrc": "^2.2.0",
    "@sourcegraph/tsconfig": "^3.0.0",
    "@sourcegraph/tslint-config": "^12.0.0",
    "@types/decompress": "^4.2.3",
    "@types/globby": "^8.0.0",
    "@types/mz": "0.0.32",
    "@types/node": "^10.12.0",
    "@types/request": "^2.47.1",
    "@types/rmfr": "^2.0.0",
    "@types/uuid": "^3.4.4",
    "@types/ws": "^6.0.1",
    "husky": "^1.1.2",
    "parcel-bundler": "^1.10.3",
    "prettier": "^1.14.3",
    "semantic-release": "^15.10.6",
    "tslint": "^5.11.0",
    "typescript": "^3.1.6"
  },
  "dependencies": {
    "decompress": "^4.2.0",
    "globby": "^8.0.1",
    "javascript-typescript-langserver": "^2.11.1",
    "lightstep-tracer": "^0.20.13",
    "mz": "^2.7.0",
    "opentracing": "^0.14.3",
    "request": "^2.88.0",
    "rmfr": "^2.0.0",
    "source-map-support": "^0.5.9",
    "sourcegraph": "^18.4.1",
    "tagged-template-noop": "^2.1.0",
    "uuid": "^3.3.2",
    "vscode-languageserver-protocol": "^3.13.0",
    "vscode-languageserver-types": "^3.13.0",
    "vscode-ws-jsonrpc": "0.0.3",
    "whatwg-url": "^7.0.0",
    "ws": "^6.1.0"
  }
}
